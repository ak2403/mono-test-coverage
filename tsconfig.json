{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
